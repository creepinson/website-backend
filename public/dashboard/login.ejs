<!DOCTYPE html>
<html lang="en">
    <!-- Blog Index -->

    <head>
        <%- include("../components/scripts") %>
        <title>Dashboard - Login</title>
    </head>

    <body>
        <%- include("../components/header") %>
        <main class="container">
            <h2>Login</h2>
            <a href="/dashboard/google">Click To Login With Google</a>
            <form id="login" action="/api/auth/user" method="POST">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input
                        class="form-control"
                        type="text"
                        id="username"
                        name="username"
                        required
                        placeholder="Enter username"
                    />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input
                        class="form-control"
                        type="password"
                        id="password"
                        name="password"
                        required
                        placeholder="Enter password"
                    />
                </div>
                <input
                    type="submit"
                    class="form-control btn btn-primary"
                    value="Login"
                />
            </form>
        </main>
        <!-- Includes Components Such As Header -->
        <script src="/js/index.js"></script>
    </body>
</html>
